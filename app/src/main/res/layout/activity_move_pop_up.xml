<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.orangecobras.checkersapp.MovePopUp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Enter Position x y"
        android:id="@+id/textViewPos"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPosX"
        android:inputType="number"
        android:ems="4"
        android:layout_below="@+id/textViewPos"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPosY"
        android:ems="4"
        android:layout_below="@+id/editTextPosX"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Enter Direction 1 is NorthEast , 2 is NorthWest, 3 is Southeast, 4 is Southwest"
        android:id="@+id/textViewDir"
        android:layout_below="@+id/editTextPosY"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDirX"
        android:inputType="number"
        android:ems="4"
        android:layout_below="@+id/textViewDir"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Enter scalar"
        android:id="@+id/textViewSca"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextSca"
        android:inputType="number"
        android:ems="4"
        android:layout_below="@+id/textViewSca"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:ems="4"
        android:id="@+id/button"
        android:layout_below="@+id/editTextSca"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:onClick="close_dialogue"/>

</RelativeLayout>
